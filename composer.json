{
    "name": "joedixon/laravel-translation",
    "description": "A tool for managing all of your Laravel translations",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Joe Dixon",
            "email": "hello@joedixon.co.uk"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0||^10.0",
        "joedixon/laravel-translation-core": "dev-main",
        "livewire/livewire": "^3.0@beta"
    },
    "require-dev": {
        "mockery/mockery": "^1.0.0",
        "pestphp/pest": "^2.0",
        "orchestra/testbench": "^8.5",
        "laravel/pint": "^1.10",
        "nunomaduro/larastan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "JoeDixon\\Translation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "extra": {
        "laravel": {
            "providers": [
                "JoeDixon\\Translation\\TranslationServiceProvider"
            ]
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/joedixon/laravel-translation-core"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
